package sample;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class PG1 {


    public static void main(String[] args) throws InterruptedException {
        
		System.setProperty("webdriver.chrome.driver","C:\\Users\\rayud\\eclipse-workspace\\grp\\src\\test\\resources\\drivers\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
    	
        String baseUrl = "https://www.opencart.com/index.php?route=cms/demo";
        String expectedTitle = "Welcome: Mercury Tours";
        String actualTitle = "";

        // launch Fire fox and direct it to the Base URL
        driver.get(baseUrl);

        // get the actual value of the title
        //actualTitle = driver.getTitle();Thread.sleep(7000);
        /*
         * compare the actual title of the page with the expected one and print
         * the result as "Passed" or "Failed"
         */
       
        try:{
            //Explicitly wait for the first element to be clickable
            Object first_element = WebDriverWait(driver, 10).until(
                EC.element_to_be_clickable((By.ID, "first-element"))
            );

            //Perform the first click action
            first_element.click();

            //Explicitly wait for the second element to be clickable
            second_element = WebDriverWait(driver, 10).until(EC.element_to_be_clickable((By.ID, "second-element")));

            //Perform the second click action
            second_element.click();

            //Add more tests as needed...

            //Close the browser window
            driver.quit();

        except Exception as e:
            print("An error occurred:", e)
            driver.quit()

       /* if (actualTitle.contentEquals(expectedTitle)){
